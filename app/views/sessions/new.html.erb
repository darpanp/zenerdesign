<div id="maincontent">
    <div id="signup">
	<h2>Sign In</h2>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
	      <% form_for(:session, :url => sessions_path) do |f| %>
                <%= f.error_messages %>
                <div class="fieldlabel">
                  <%= f.label :email %>
                </div>
                <div class="field">
                  <%= f.text_field :email %>
                </div>
                <div class="fieldlabel">
                  <%= f.label :password %>
                </div>
                <div class="field">
                  <%= f.password_field :password %>
                </div>
                <br />
                <div class="actions">
                  <%= f.submit "Sign in" %>
                </div>
              <% end %>
	    <br />
    </div>
    </div>